<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="com.example.admin.pokemonlap1.fragment.PlayFragment">

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/play"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/pb_progess"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_button"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_centerHorizontal="true"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="200dp"
            android:layout_height="20dp"
            />
        <TextView
            android:id="@+id/score"
            android:layout_centerHorizontal="true"
            android:textSize="40dp"
            android:layout_marginTop="50dp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView

            android:src="@drawable/aromatisse"
            android:background="@drawable/round_button"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="110dp"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/ivPicture" />

        <LinearLayout

            android:id="@+id/liner1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="420dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true">

            <Button
                android:text="PORYGON"
                android:textColor="@color/Back"
                android:background="@drawable/round_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button1" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <Button
                android:text="GEODUDE"
                android:textColor="@color/Back"

                android:background="@drawable/round_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button2" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"

            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/liner1"
            >
            <Button
                android:id="@+id/button3"
                android:text="WARTORTLE"
                android:textColor="@color/Back"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button4"
                android:text="POLIWAG"
                android:textColor="@color/Back"
                android:background="@drawable/round_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
